<div class="et-content-container" {{action "sortByColumn" content}}>
	<span class="et-sortIcon">
		{{#if content.isSorted}}
			{{#if content.sortAscending}}
				&uarr;
			{{else}}
				&darr;
			{{/if}}
		{{/if}}
	</span>

	<span class="et-content et-content--headerCell {{if content.isSorted 'is-sortedBy'}} js-header-content">
		{{content.headerCellName}}
	</span>
</div>

<a class="et-headerCellPopoverLink-container js-et-headerCellPopoverLink-container">
	<i class="mdi mdi-caret-down et-headerCellPopoverLink"></i>
</a>
